{% if show_links == true %}
  <div class="vud-widget vud-widget-plain" id="{{ widget_instance_id }}">
    {% if show_up_as_link == true %}
      <a href="{{ link_up }}" rel="nofollow" class="{{ link_class_up }} use-ajax">
    {% endif %}
        <span class="{{ class_up }}" title="{% trans %}Vote up!{% endtrans %}"></span>
        <div class="element-invisible">{% trans %}Vote up!{% endtrans %}</div>
    {% if show_up_as_link == true %}
      </a>
    {% endif %}
    {% if show_down_as_link == true %}
      <a href="{{ link_down }}" rel="nofollow" class="{{ link_class_down }} use-ajax">
    {% endif %}
        <span class="{{ class_down }}" title="{% trans %}Vote down!{% endtrans %}"></span>
        <div class="element-invisible">{% trans %}Vote down!{% endtrans %}</div>
    {% if show_down_as_link == true %}
      </a>
    {% endif %}
    {% if show_reset == true %}
      <a href="{{ link_reset }}" rel="nofollow" class="{{ link_class_reset }} use-ajax" title="{{ reset_long_text }}">
        <div class="{{ class_reset }}">
          {{ reset_short_text }}
        </div>
      </a>
    {% endif %}
  </div>
{% endif %}
